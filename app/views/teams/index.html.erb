<h1> Your Teams </h1>
<br>
<%= button_to "Create a new team", new_team_path, method: "get" %>
<br>
<br>

<% @team.each do |x| %>
<%= form_with model: @team, url:  user_team_path(current_user, x), method: "get" do |f|%>
    <%= f.hidden_field :team_id, value: x.id %>
    <%= submit_tag(x.team_name, id: "button", name: "submit" ) %>
<br>
<% if current_user.id == x.user_id %>
<%= link_to 'Delete Team', team_path(x) , method: "delete" %>
<% end %>
<% end %>
<% end %>